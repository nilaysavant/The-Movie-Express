{{!-- navbar start --}}
<ul>
    <h1 class="page-title">The Movie Express </h1>
    <li><a class="active" href="/home">Home</a></li>
    <li><a href="/search">Submit</a></li>
    <li style="float:right"><a href="#about">About</a></li>
</ul>
{{!-- navbar ends --}}

<div class="centered">
    <section class="cards">
        {{#each array as |movie|}}
        <article class="card">
            <img src={{movie.poster}} style="width: 100%;">
            <div class="card-heading">
                {{movie.title}}
            </div>
            <div class="card-info">
                <p>
                    {{movie.year}} {{movie.type}}
                </p>
                <button class="button"
                    onclick="archiveMovie('{{movie.id}}','{{escape movie.title}}')">Archive</button><br><br><br>
            </div>
        </article>
        {{/each}}
    </section>
</div>


<script src="scripts/home.js"></script>